{
    "lexicon": 1,
    "id": "io.whiteley.ATlas.pin",
    "defs": {
        "main": {
            "type": "record",
            "key": "literal:self",
            "description": "A user's geographical pin on the atlas",
            "record": {
                "type": "object",
                "required": [
                    "did",
                    "longitude",
                    "latitude",
                    "description",
                    "placedAt"
                ],
                "properties": {
                    "did": {
                        "type": "string",
                        "format": "did"
                    },
                    "placedAt": {
                        "type": "string",
                        "format": "datetime"
                    },
                    "longitude": {
                        "$comment": "Longitude as per WGS84 (EPSG:4326)",
                        "type": "string",
                        "maxLength": 32
                    },
                    "latitude": {
                        "$comment": "Latitude as per WGS84 (EPSG:4326)",
                        "type": "string",
                        "maxLength": 32
                    },
                    "description": {
                        "$comment": "Pin description (as submitted by the user)",
                        "type": "string",
                        "maxLength": 256
                    },
                    "website": {
                        "$comment": "User-submitted website",
                        "type": "string",
                        "maxLength": 256
                    }
                }
            }
        }
    }
}