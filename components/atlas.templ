package components

templ Atlas() {
    <div id="map" style="width: 100%; height: 100%;"></div>
    <script>
        const map = new maplibregl.Map({
        container: 'map',
        style: 'https://tiles.basemaps.cartocdn.com/gl/voyager-gl-style/style.json',
        center: [15, 50],
        zoom: 3
        });

        map.on('style.load', () => {
            map.setProjection({
                type: 'globe', // Set projection to globe
            });
        });
    </script>
}